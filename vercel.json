{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(chat|upload|sessions|stats|health|save-session|chat-speech)",
      "dest": "/api/index"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}